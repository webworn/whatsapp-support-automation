# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/whatsapp_support"
REDIS_URL="redis://localhost:6379"

# Application Configuration
NODE_ENV=development
PORT=3000
JWT_SECRET=your-super-secret-jwt-key-here
API_VERSION=v1

# MSG91 WhatsApp Configuration
MSG91_AUTH_KEY=your-msg91-auth-key
MSG91_BASE_URL=https://api.msg91.com/api
MSG91_WEBHOOK_SECRET=your-webhook-secret
MSG91_SENDER_ID=your-sender-id

# OpenRouter LLM Configuration
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_PRIMARY_MODEL=anthropic/claude-3-sonnet
OPENROUTER_FALLBACK_MODEL=openai/gpt-3.5-turbo
OPENROUTER_MAX_TOKENS=500
OPENROUTER_TIMEOUT=30000

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX_REQUESTS=10

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Queue Configuration
BULL_REDIS_URL=redis://localhost:6379
QUEUE_CONCURRENCY=5

# Security
WEBHOOK_TIMEOUT=30000
SESSION_TIMEOUT=3600
CONVERSATION_TIMEOUT=86400

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Development
DEBUG=true
ENABLE_SWAGGER=true